<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Site</title>

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />

    <link rel="stylesheet" href="./public/style.css">
</head>

<body>

    <section id="header">
        <a href="#"><img src="./public/img/logo.png" class="logo" alt=""></a>
        <div>
            <ul id="navbar">
                <li><a href="/home">Home</a></li>
                <li><a href="/mens">Men</a></li>
                <li><a href="/womens">Women</a></li>
                <li id="lg-bag"><a href="#" class="active"><i class="far fa-shopping-bag"></i></a></li>
                <a id="close" href="#"><i class="far fa-times"></i></a>
            </ul>
        </div>
        <div id="mobile">
            <a href="/cart"><i class="far fa-shopping-bag"></i></a>
            <i id="bar" class="fas fa-outdent"></i>

        </div>
    </section>

    <section id="page-header" class="about-header">

        <h2>Cart</h2>
        <p>Pay for your stuff!</p>

    </section>

    <section id="cart" class="section-p1">
        <table width="100%">
            <thead>
                <tr>
                    <td>Remove</td>
                    <td>Image</td>
                    <td>Product</td>
                    <td>Price</td>
                    <td>Quantity</td>
                </tr>
            </thead>

            <tbody class="cart-items">
                <% if(data.length){ for(var i = 0; i< data.length; i++) {%>
                <tr class="cart-row">
                    <form id="my_form" action="/cart/<%=data[i].id%>?_method=DELETE" method="POST">
                    <td><a href="javascript:{}" onclick="document.getElementById('my_form').submit(); return false;"  class="btn-danger" ><i class="far fa-times-circle"></i></a></td>
                    </form>
                    <td><img src="<%= data[i].image%>" alt=""></td>
                    <td><%= data[i].name%></td>
                    <td class="cart-price"><%= data[i].price%></td>
                    <td><input style="width: 10%;" class="cart-quantity-input" type="number" value="1" name="" id=""></td>
                </tr>
                <% } }else{ %>
                    <tr class="cart-row">
                        <td></td>
                        <td></td>
                        <td></td>
                        <td class="cart-price"></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </section>

    <section id="cart-add" class="section-p1">

        <div id="subtotal">
            <h3>Cart Totals</h3>
            <table>
                <tr>
                    <td><strong>Total</strong></td>
                    <td><strong class="cart-total-price"></strong></td>
                </tr>
            </table>
        </div>
    </section>


    <div class="row">
        <div class="col-75">
          <div class="container">
            <form action='/checkout' method='POST'>
              <div class="row">
                <div class="col-50">
                  <label for="fname"><i class="fa fa-user"></i> Full Name</label>
                  <input name="name" type="text" id="fname" name="firstname" placeholder="John M. Doe">
                  <label for="email"><i class="fa fa-envelope"></i> Email</label>
                  <input name="email" type="text" id="email" name="email" placeholder="john@example.com">
                  <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
                  <input name="address" type="text" id="adr" name="address" placeholder="542 W. 15th Street">
                  <label for="city"><i class="fa fa-institution"></i> City</label>
                  <input name="city" type="text" id="city" name="city" placeholder="New York">
      
                  <div class="row">
                    <div class="col-50">
                      <label for="state">State</label>
                      <input name="state" type="text" id="state" name="state" placeholder="NY">
                    </div>
                    <div class="col-50">
                      <label for="zip">Zip</label>
                      <input name="zip" type="text" id="zip" name="zip" placeholder="10001">
                    </div>
                  </div>
                </div>
              </div>
              <input type="radio" id="total" name="fav_language" value="Approve total">
              <label for="html">Approve total </strong></label><br>
              <input type="submit" value="Checkout" class="btn">
            </form>
          </div>
        </div>


    <script src="./public/cart.js"></script>


</body>

</html>